<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Uniranker Table</title>
  </head>
  <body>
    <table>
      <thead>
        <tr>
        <th>rank</th>
        <% @universities.first.keys.each do |key| %>
          <th><%= key %></th>
        <% end %>
        </tr>
      </thead>
      <tbody>
        <% @universities.each_with_index do |university, i| %>
          <tr>
            <td><%= (i+1) %></td>
          <% university.keys.each do |key| %>
            <td><%= university[key] %></td>
          <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>
